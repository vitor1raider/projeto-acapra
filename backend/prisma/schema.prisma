
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
 url = env("DATABASE_URL")
}

model Usuario {
  id_usuario String   @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  email      String   @unique
  senha      String
  status     Status   @default(Ativo)

  // Relacionamento
  animais    Animais[]
}

model Animais {
  id_animal           String     @id @default(auto()) @map("_id") @db.ObjectId
  nome                String
  especie             Especie
  sexo                Sexo
  castracao           SimNao
  vacina              SimNao
  idade               String
  status              Status @default(Ativo)
  sobre               String?
  imagem              String? 

  // Relacionamento (referência ao Usuario)
  id_usuario String?   @db.ObjectId
  usuario    Usuario?  @relation(fields: [id_usuario], references: [id_usuario])
}

// ENUMS
enum Especie {
  Gato
  Cachorro
}

enum Sexo {
  Macho
  Fêmea
}

enum SimNao {
  Sim
  Não
}

enum Status {
  Ativo
  Inativo
}