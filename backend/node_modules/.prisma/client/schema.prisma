generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario String @id @default(auto()) @map("_id") @db.ObjectId
  nome       String
  email      String @unique
  senha      String
  status     Status @default(Ativo)

  // Relacionamento
  animais Animais[]
}

model Animais {
  id_animal String  @id @default(auto()) @map("_id") @db.ObjectId
  nome      String
  especie   Especie
  sexo      Sexo
  castracao SimNao
  vacina    SimNao
  idade     String
  status    Status  @default(Ativo)
  sobre     String?
  imagem    String?
  porte     Porte?

  // Relacionamento (referência ao Usuario)
  id_usuario String?  @db.ObjectId
  usuario    Usuario? @relation(fields: [id_usuario], references: [id_usuario])
}

model FormularioAdocao {
  id                           String   @id @default(auto()) @map("_id") @db.ObjectId
  nomeCompleto                 String
  telefoneContato              Int
  idade                        Int
  animalInteresse              String
  enderecoCompleto             String
  moradia                      String // casa ou apartamento
  renda                        Int
  possuiOutrosAnimais          String // descrição dos outros animais
  condicoesManterAnimal        String // texto sobre condições físicas/mentais/financeiras
  telasProtecao                SimNao
  acessoRua                    SimNao
  animaisCastradosVacinados    SimNao
  todosConcordamAdocao         SimNao
  concordaCastracaoObrigatoria SimNao
  concordaTaxaAdocao           SimNao
  criadoEm                     DateTime @default(now())
}

// ENUMS
enum Especie {
  Gato
  Cachorro
}

enum Sexo {
  Macho
  Fêmea
}

enum SimNao {
  Sim
  Não
}

enum Status {
  Ativo
  Inativo
}

enum Porte {
  Pequeno
  Medio
  Grande
}
